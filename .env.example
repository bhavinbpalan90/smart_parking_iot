# Snowflake Connection - Key Pair Authentication
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_ROLE=SYSADMIN
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=PARKING_IOT
SNOWFLAKE_SCHEMA=RAW_DATA

# Key Pair Authentication (choose one method)
# Method 1: Path to private key file (mounted in container)
SNOWFLAKE_PRIVATE_KEY_PATH=/app/keys/rsa_key.p8

# Method 2: Private key content (base64 encoded) - use this for containerized deployments
# Generate with: cat rsa_key.p8 | base64 | tr -d '\n'
# SNOWFLAKE_PRIVATE_KEY_BASE64=your_base64_encoded_private_key

# Private key passphrase (if encrypted)
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=

# Snowpipe Streaming Settings
ENABLE_SNOWPIPE_STREAMING=true

# Iceberg External Volume Name (configured at schema level in snowflake_setup.sql)
ICEBERG_EXTERNAL_VOLUME=EV_S3_SNOWFLAKEDEMOS
